<div class="restaurant-img" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('https://loremflickr.com/800/400/<%= @restaurant.category %>,food/all');"><h1><%= @restaurant.name %></h1></div>

<%= link_to 'Edit', edit_restaurant_path %> | <%= link_to 'Delete', restaurant_path, method: :delete, data: { confirm: "Are you sure?" } %>
<p><%= @restaurant.category %></p>

<p><%= @restaurant.address %></p>

<p><%= link_to "Add a review", new_restaurant_review_path(@restaurant) %></p>
<ul>
  <% @reviews.each do |review| %>
    <li><%= review.rating %> stars<br><%= review.content %></li>
  <% end %>
</ul>

<%= link_to 'Back', restaurants_path %>
